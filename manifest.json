{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "3.0.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "author": "nthnbch",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "fftabclose@nathan.swiss",
      "strict_min_version": "109.0"
    }
  },
  
  "icons": {
    "16": "icons/png/icon-16.png",
    "32": "icons/png/icon-32.png",
    "48": "icons/png/icon-48.png",
    "128": "icons/png/icon-128.png"
  },
  
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "contextualIdentities",
    "cookies"
  ],
  
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"],
    "type": "module"
  },
  
  "action": {
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/png/icon-16.png",
      "32": "icons/png/icon-32.png",
      "48": "icons/png/icon-48.png"
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline';"
  },
  
  "commands": {
    "close-old-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Close old tabs based on timeout settings"
    }
  }
}
